<div class='main-photo'>
  <img src="<%= @post.photo_url %>" style="width:100%;">
</div>

<div class='container'>
  <h1><b><%= @post.headline %></b></h1>
  <h3><%= @post.subhead %></h3>
  <div class='col-md-8'>
    <h5>By <%= @post.byline.upcase %></h5>
  </div>

  <div class='row'>
    <div class='col-md-8' id='text'>
      <p><%= @post.main_body.html_safe %></p>
    </div>
    <div class='col-md-4'>
      <p><a href="https://twitter.com/intent/tweet?text=<%= @post.headline %> <%= request.original_url %>" data-size="large">
        <i class="fa fa-twitter"></i>
      </a></p>
    </div>
  </div>
</div>

<script>window.twttr = (function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0],
    t = window.twttr || {};
  if (d.getElementById(id)) return t;
  js = d.createElement(s);
  js.id = id;
  js.src = "https://platform.twitter.com/widgets.js";
  fjs.parentNode.insertBefore(js, fjs);

  t._e = [];
  t.ready = function(f) {
    t._e.push(f);
  };

  return t;
}(document, "script", "twitter-wjs"));</script>
